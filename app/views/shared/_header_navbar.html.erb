<header aria-label='Primary'>
  <div id="btaa-header">
    <div class='container'>
      <div class='row'>
        <div class='col-sm-12'>
          <div id="cic-header-navbar" class="navbar navbar-static-top" style="margin-bottom:0;">
            <div class="navbar-header">
              <%= link_to image_tag('btaa-logo.jpg', {height: '100px', alt: 'Big Ten Academic Alliance', style:'margin-top:5px'}), root_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div id='application-header'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-12'>
          <div id="header-navbar" class="navbar navbar-static-top" role="navigation">
            <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#user-util-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <%=link_to "Geoportal", root_path, class: "navbar-brand", style:'font-weight:bold; font-size:36px' %>
            </div>

            <div class="collapse navbar-collapse" id="user-util-collapse">
              <%= render :partial=>'/user_util_links' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if controller_name == 'catalog' && has_search_parameters? %>
    <div id="search-navbar">
      <div class="container">
        <div class='row'>
          <div class='col-xs-12 col-sm-9'>
            <%= render_search_bar  %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</header>
