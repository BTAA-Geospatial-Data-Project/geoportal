<div id='previousNextDocument' class='pagination-search-widgets'>
  <% if @previous_document || @next_document %>
    <div class="page_links">
      <%= link_to_previous_document @previous_document %> |

      <%= item_page_entry_info %> |

      <%= link_to_next_document @next_document %>
    </div>
  <% end %>
  <% if current_search_session %>
    <div class="pull-right search-widgets">
      <%= link_back_to_catalog class: 'btn btn-primary' %>
      <%= link_to t('blacklight.search.start_over'), root_path({:utf8 => 'âœ“', :q => '', :search_field => 'all_fields'}), :class => "catalog_startOverLink btn btn-primary", :id=>"startOverLink" %>
    </div>
  <% end %>
</div>
